{
  "name": "indie-stack-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:tailwind": "npm run generate:tailwind -- --minify",
    "build:sass": "npm run generate:sass",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "docker:up": "docker-compose up -d",
    "dev": "run-p dev:*",
    "dev:tailwind": "npm run generate:tailwind -- --watch",
    "dev:sass": "npm run generate:sass -- --watch",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "format": "prettier --write .",
    "generate:tailwind": "tailwindcss -o ./app/styles/tailwind.css",
    "generate:sass": "sass scss:app/styles/sass-output",
    "postinstall": "remix setup node",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "nprm run docker:up && prisma migrate dev && prisma db seed",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"cypress open\"",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test dev http://localhost:8811 \"cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "@remix-run/react": "*",
    "@remix-run/vercel": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remix": "*",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@faker-js/faker": "^6.1.1",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@remix-run/serve": "*",
    "@storybook/addon-actions": "^6.4.20",
    "@storybook/addon-essentials": "^6.4.20",
    "@storybook/addon-interactions": "^6.4.20",
    "@storybook/addon-links": "^6.4.20",
    "@storybook/react": "^6.4.20",
    "@storybook/testing-library": "^0.0.9",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^14.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@vitejs/plugin-react": "^1.2.0",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "binode": "^1.0.5",
    "c8": "^7.11.0",
    "chromatic": "^6.5.3",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.5.7",
    "happy-dom": "^2.51.0",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^3.11.1",
    "sass": "^1.49.11",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.0",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.8.0"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
